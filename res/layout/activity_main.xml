<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="4"
    tools:context=".MainActivity" >

    <GridLayout
        android:id="@+id/cardTable"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:rowCount="4" >

        <Button
            android:id="@+id/button2"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:text="Button" />

        <Button
            android:id="@+id/button4"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:text="Button" />

        <Button
            android:id="@+id/button5"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:text="Button" />

        <Button
            android:id="@+id/button6"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Button" />

        <Button
            android:id="@+id/button7"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:text="Button" />

        <Button
            android:id="@+id/button8"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:text="Button" />

        <Button
            android:id="@+id/button9"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:text="Button" />

        <Button
            android:id="@+id/button10"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:text="Button" />

        <Button
            android:id="@+id/button11"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:text="Button" />

        <Button
            android:id="@+id/button12"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:text="Button" />

        <Button
            android:id="@+id/button13"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:text="Button" />

        <Button
            android:id="@+id/button14"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="Button" />

        <Button
            android:id="@+id/button15"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="Button" />

        <Button
            android:id="@+id/button16"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="Button" />

        <Button
            android:id="@+id/button17"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="Button" />
    </GridLayout>

    <GridLayout
        android:layout_column="0"
        android:layout_gravity="bottom|center"
        android:layout_row="2"
        android:columnCount="2" >

        <Button
            android:id="@+id/dealButton"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:onClick="dealButtonOnClick"
            android:text="Deal" />

        <RadioGroup
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/match2"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="0"
                android:checked="true"
                android:text="Match 2" />

            <RadioButton
                android:id="@+id/match3"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_row="0"
                android:text="Match 3" />
        </RadioGroup>

        <Space
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_row="1" />
    </GridLayout>

    <TextView
        android:id="@+id/actionText"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="1"
        android:text="Action Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <GridLayout
        android:layout_column="0"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="3" >

        <TextView
            android:id="@+id/flipCountText"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Flips"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="1"
            android:text="Score"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </GridLayout>

</GridLayout>